<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobActivity">
    <ImageView
        android:id="@+id/sas"
        android:layout_width="80dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="331dp"
        android:layout_marginRight="331dp"
        android:src="@drawable/ic_action_backwards" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/namE"
        android:hint="enter name"
        android:layout_marginTop="190dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter job"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/namE"
        android:id="@+id/personJob"/>

    <Button
        android:id="@+id/addJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personJob"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="20dp"
        android:text="ADD JOB" />

    <Button
        android:id="@+id/viewJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personJob"

        android:layout_marginLeft="68dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/addJob"
        android:text="VIEW JOB"
        android:textColor="@color/white" />


</RelativeLayout>